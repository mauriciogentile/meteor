extends layout
block content
	script(type="text/template", id="item-template")
		|<div class="player <%= selected ? 'selected' : '' %>">
		|	<div class="photo"><img src="<%- pictureUrl %>" class="photo"/></div>
		|	<span class="name"><%- playerName %></span>
		|	<span class="score"><%- score %></span>
		|</div>
	script(type="text/template", id="footer-template")
		|<div id="selectedPlayer" class="name"><%- playerName %></div>

	div(id="main",class="shadow")
		header
			h1 Leaderboard
		section(id="board)
			ul(id="leaderboard", class="leaderboard")
			div(class='clear')
		footer(id="actions")
			div
				div(class="inc") +5
				div(class="dec") -5
			div(class='clear')
	div(class='clear')
